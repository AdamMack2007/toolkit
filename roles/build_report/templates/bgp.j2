<!–– INTERNAL TABLE FOR BGP --!>
<div class="expand">
  <p class="expandclass">> BGP Global Info</p>
</div>
<div class="content">
<table id="subtable">
    <thead>
        <tr>
            <th>ASN</th>
            <th>Router ID</th>
        </tr>
    </thead>
    <tbody>
{% if hostvars[network_switch]['ansible_network_resources']['bgp_global'] is defined %}
{% for bgpinfo in hostvars[network_switch]['ansible_network_resources']['bgp_global'] %}
        <tr>
            <td>{{bgpinfo['as_number']}}</td>
            <td>{{bgpinfo['router_id']|default("Not Configured")}}</td>
        </tr>
{% endfor %}
{% else %}
No BGP configured on this device
{% endif %}
    </tbody>
</table>
</div>
</div>
<!–– END INTERNAL TABLE FOR BGP --!>
